<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/quickTipsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quick_tips"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="30dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="10dp"/>

        <LinearLayout
            android:id="@+id/quickTipsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quickTipsText"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u2022 Here will be some quick tips on each topic\n\u2022 This is how it will look"
                android:textSize="14sp"
                android:padding="20dp"
                android:background="@drawable/ic_text_bubble"/>

            <ImageView
                android:id="@+id/cactusLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cactus_logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/filterHeader"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_title_bg"
            android:padding="10dp"
            android:text="@string/all"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quickTipsCard" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_articles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filterHeader" />

    <ImageButton
        android:id="@+id/quickTipsToggleShow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/quickTipsText"
        app:layout_constraintTop_toTopOf="@id/quickTipsText"
        app:layout_constraintBottom_toBottomOf="@id/quickTipsText"
        app:srcCompat="@drawable/ic_arrow_down" />

    <ImageButton
        android:id="@+id/quickTipsToggleHide"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/quickTipsText"
        app:layout_constraintTop_toTopOf="@id/quickTipsText"
        app:layout_constraintBottom_toBottomOf="@id/quickTipsText"
        app:srcCompat="@drawable/ic_arrow_left"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>
