<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/profileHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/your_profile"
        android:textColor="@color/black"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statsSectionDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/section_bar"
        android:paddingHorizontal="65dp"
        android:paddingVertical="5dp"
        android:text="@string/your_stats"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileHeading" />

    <View
        android:id="@+id/verticalLine1"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsSectionDivider"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/verticalLine2"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginEnd="150dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsSectionDivider" />

    <TextView
        android:id="@+id/stat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:text="@string/your_stats"
        app:layout_constraintEnd_toStartOf="@id/verticalLine1"
        app:layout_constraintTop_toBottomOf="@id/statsSectionDivider" />

    <TextView
        android:id="@+id/stat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/your_stats"
        app:layout_constraintEnd_toStartOf="@id/verticalLine2"
        app:layout_constraintStart_toEndOf="@id/verticalLine1"
        app:layout_constraintTop_toBottomOf="@id/statsSectionDivider" />

    <TextView
        android:id="@+id/stat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/your_stats"
        app:layout_constraintStart_toEndOf="@id/verticalLine2"
        app:layout_constraintTop_toBottomOf="@id/statsSectionDivider" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Your are currently a... \n Just __ more points till you reach..."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stat2" />

    <TextView
        android:id="@+id/myArticleDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/section_bar"
        android:paddingHorizontal="65dp"
        android:paddingVertical="5dp"
        android:text="@string/my_articles"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressText" />

    <ImageView
        android:id="@+id/delete_mark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_redcross"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myArticleDivider" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/saved_article"
        app:layout_constraintTop_toBottomOf="@id/myArticleDivider"
        android:text="5 Steps To Sustainable Eating"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toEndOf="@id/delete_mark"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>