<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Question 1" />

        <RadioGroup
            android:id="@+id/question_1_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/question1">

            <RadioButton
                android:id="@+id/option1"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/very_often"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question1" />

            <RadioButton
                android:id="@+id/option2"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/often"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option1" />

            <RadioButton
                android:id="@+id/option3"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/sometimes"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option2" />

            <RadioButton
                android:id="@+id/option4"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/rarely"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option3" />
        </RadioGroup>

        <TextView
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:padding="10sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_1_btns"
            tools:text="Question 2" />

        <RadioGroup
            android:id="@+id/question_2_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/question2" >

            <RadioButton
                android:id="@+id/option1.2"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/very_often"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question2" />

            <RadioButton
                android:id="@+id/option2.2"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/often"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option1.2" />

            <RadioButton
                android:id="@+id/option3.2"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/sometimes"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option2.2" />

            <RadioButton
                android:id="@+id/option4.2"
                style="@style/radioButtonStyle"
                android:background="@drawable/radio_button_selector"
                android:button="@null"
                android:text="@string/rarely"
                android:textColor="@drawable/radio_button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/option3.2" />
        </RadioGroup>

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/quiz_btn"
            android:text="@string/submit"
            android:visibility="gone"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question_2_btns" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>